{% extends 'base.html.twig' %}

{% block title %}Companies{% endblock %}

{% block body %}

<div class="container">

    <div class="row card-container justify-content-center">
        {% for company in companies %}
        <div class="card mt-4" style="width: 18rem; margin-right:25px;">
            <div class="card-body">
                <h5 class="card-title">{{ company.name }}</h5>
                <p class="card-text">ISIN: {{ company.isin }}</p>
                <p class="card-text">Number of employees: {{ company.employees }}</p>
            </div>
        </div>
        {% endfor %}
    </div>

</div>

{% endblock %}
